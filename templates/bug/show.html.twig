{% extends 'base.html.twig' %}

{% block title %}
    {{ 'bug'|trans({'%id%': bug.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'bug'|trans({'%id%': bug.id|default('')}) }}</h1>
    {% if bug is defined and bug|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'id'|trans }}</dt>
            <dd>{{ bug.id }}</dd>
            <dt>{{ 'createdAt'|trans }}</dt>
            <dd>{{ bug.createdAt|format_date('long') }}</dd>
            <dt>{{ 'updatedAt'|trans }}</dt>
            <dd>{{ bug.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'title'|trans }}</dt>
            <dd>{{  bug.title }}</dd>
            <dt>{{ 'description'|trans }}</dt>
            <dd>{{  bug.description }}</dd>
            <dt>{{ 'category'|trans }}</dt>
            <dd>{{  bug.category.title }}</dd>
            <dt>{{ 'status'|trans }}</dt>
            {% if bug.status == true %}
                <dd>Done</dd>
            {% endif %}
            {% if bug.status == false %}
                <dd>To do</dd>
            {% endif %}
                </dl>
        <p>
            <a href="{{ url('bug_index') }}" title="{{ 'back'|trans }}">
                {{ 'back'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'empty.list'|trans }}
        </p>
    {% endif %}
{% endblock %}